<resources xmlns:tools="http://schemas.android.com/tools">
    <!--스플래시 테마-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/joo_dark</item>
        <item name="colorOnPrimary">@color/red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 1.기본 감성   2.밝은거   3.어두운거-->
    <!-- Base application theme. -->
    <style name="Theme.JooDiary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basic_primary</item>
        <item name="colorPrimaryVariant">@color/basic_primary_light</item>
        <item name="colorOnPrimary">@color/basic_primary_dark</item>

        <item name="android:colorPrimary">@color/basic_primary</item>
        <item name="android:colorPrimaryDark">@color/basic_primary_dark</item>
        <item name="android:colorAccent">@color/red</item>

        <!--기본 글씨 색상-->
        <item name="android:textColor">@color/basic_primary_text_color</item>
        <item name="android:textColorPrimary">@color/basic_primary_text_color</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <!--메뉴, 뒤로가기 색상-->
        <item name="colorControlNormal">@color/basic_primary_dark</item>
        <item name="android:actionMenuTextColor">@color/basic_primary_text_color</item>
        <!-- EditText 활성화 색상-->
        <item name="colorControlActivated">@color/basic_primary_dark</item>
        <!--기본 배경 색상-->
        <item name="android:windowBackground">@color/basic_primary_background_color</item>
        <!--상태바 색상-->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/basic_primary_statusBar_color
        </item>
        <!--터치 효과 색상-->
        <item name="colorControlHighlight">@color/basic_primary_touch_color</item>
        <!--툴바 색상-->
        <item name="toolbarStyle">@style/toolbarStyle</item>
        <!--바텀Nav 색상-->
        <item name="bottomNavigationStyle">@style/bottomNavStyle</item>
        <!--플로팅 버튼-->
        <item name="floatingActionButtonStyle">@style/floatingButtonStyle</item>
        <!--카드뷰-->
        <item name="cardViewStyle">@style/myCustomCardViewStyle</item>
        <!--확인창-->
        <item name="materialAlertDialogTheme">@style/myCustomAlertDialogStyle</item>
        <!--Date picker-->
        <item name="android:datePickerDialogTheme">@style/myCustomDatePickerStyle</item>
        <!--이미지 버튼-->
        <item name="imageButtonStyle">@style/imageButtonThemeInToolbar</item>
    </style>

    <style name="toolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="android:background">@color/basic_primary_background_color</item>
    </style>

    <style name="imageButtonThemeInToolbar" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/basic_primary_background_color</item>
    </style>

    <style name="bottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/basic_primary_background_color</item>
    </style>

    <style name="floatingButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/basic_primary_dark</item>
        <item name="tint">@color/basic_primary_background_color</item>
    </style>

    <style name="myCustomCardViewStyle" parent="CardView.Light">
        <item name="android:backgroundTint">@color/basic_primary_background_color</item>
    </style>

    <style name="myCustomAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:backgroundTint">@color/basic_primary_background_color</item>
    </style>

    <style name="myCustomDatePickerStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/basic_primary_light</item>
        <item name="android:windowBackground">@color/basic_primary_background_color
