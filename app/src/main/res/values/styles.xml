<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="font_mr_line_5dp">
        <item name="android:fontFamily">@font/maruburi_regular</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <!--패스워드 버튼 스타일-->
    <style name="password_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--메뉴 스타일-->
    <style name="MyMenu" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">17sp</item> //size desired.
        <item name="android:textColor">@color/red</item> //font color
        <item name="android:background">#FFFFFF</item> //background
        <item name="android:fontFamily">@font/binggraesamanco</item>
    </style>

</resources>